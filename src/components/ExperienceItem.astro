---
interface Props {
    title: string;
    company: string;
    period: string;
    description?: string;
}

const { title, company, period, description } = Astro.props;
---

<div class="relative pl-8 pb-12 last:pb-0 group">
    <!-- Timeline line -->
    <div
        class="absolute left-0 top-0 bottom-0 w-px bg-pink-200 group-last:bg-transparent"
    >
    </div>

    <!-- Timeline dot -->
    <div
        class="absolute left-[-4px] top-2 w-2 h-2 rounded-full bg-pink-400 ring-4 ring-pink-50"
    >
    </div>

    <div
        class="flex flex-col md:flex-row md:justify-between md:items-baseline gap-1 mb-2"
    >
        <h3 class="text-xl font-bold text-slate-800">{title}</h3>
        <span
            class="text-sm font-medium text-pink-500 bg-pink-50 px-3 py-1 rounded-full"
            >{period}
        </span>
    </div>
    <div class="text-lg font-medium text-slate-600 mb-4">{company}</div>

    {
        description && (
            <p class="text-slate-600 leading-relaxed mb-4">{description}</p>
        )
    }

    <ul class="space-y-2">
        <slot />
    </ul>
</div>
